<DockPanel
    x:Class="SliceFolder.Main.Layout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SliceFolder.Main"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Background="Blue" DockPanel.Dock="Top">
        <Label Foreground="White">
            MainLayout 영역입니다.
        </Label>
        <Button
            Width="100"
            Height="50"
            Command="{Binding Route1Command}"
            Content="Sub.Layout 이동" />
        <Button
            Width="100"
            Height="50"
            Command="{Binding Route2Command}"
            Content="Sub.Layout.Test 이동" />
        <Button
            Width="100"
            Height="50"
            Command="{Binding Route3Command}"
            Content="Sub.Layout.Test2 이동" />
    </StackPanel>
    <Label HorizontalAlignment="Center" VerticalAlignment="Center">
        Region 영역입니다
    </Label>
</DockPanel>
